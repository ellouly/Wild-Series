{% extends 'base.html.twig' %}

{% block title %}Liste des épisodes{% endblock %}

{% block body %}
    <h1>Liste des épisodes</h1>

    <table class="table bg-white">
        <thead>
            <tr>
                <th>Nom de la série</th>
                <th>Année de la saison</th>
                <th>Titre épisode</th>
                <th>Numéro épisode</th>
                <th>Synopsis</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.program.title }}</td>
                <td>{{ episode.season.year }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td>{{ episode.synopsis }}</td>
                <td>
                    <a href="{{ path('episode_show', {'slug': episode.slug}) }}">Accéder</a>
                    <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'article trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="create" href="{{ path('episode_new') }}">Créer un nouvel épisode</a>
{% endblock %}

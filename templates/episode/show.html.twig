{% extends 'base.html.twig' %}

{% block title %}{{ episode.title }}{% endblock %}

{% block body %}
    <div class="bg-white p-3">
        <h1>{{ episode.title }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Titre</th>
                    <td>{{ episode.title }}</td>
                </tr>
                <tr>
                    <th>Numéro</th>
                    <td>{{ episode.number }}</td>
                </tr>
                <tr>
                    <th>Synopsis</th>
                    <td>{{ episode.synopsis }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-success m-3" href="{{ path('episode_index') }}">Retour à la liste</a>

        <a class="btn btn-success m-3" href="{{ path('episode_edit', {'slug': episode.slug}) }}">Modifier</a>

        {{ include('episode/_delete_form.html.twig') }}
    </div>
{% endblock %}

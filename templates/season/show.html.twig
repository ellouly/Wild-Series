{% extends 'base.html.twig' %}

{% block title %}Saison {{ season.year }}{% endblock %}

{% block body %}
    <div class="bg-white p-3">
        <h1>Saison {{ season.year }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Année</th>
                    <td>{{ season.year }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ season.description }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-success m-3" href="{{ path('season_index') }}">Retour à la liste</a>

        <a class="btn btn-success m-3" href="{{ path('season_edit', {'id': season.id}) }}">Mettre à jour</a>

        {{ include('season/_delete_form.html.twig') }}
    </div>
{% endblock %}

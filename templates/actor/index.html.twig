{% extends 'base.html.twig' %}

{% block title %}Liste acteurs{% endblock %}

{% block body %}
    <h1 class="text-success">Liste des acteurs</h1>

    <table class="table bg-white">
        <thead>
        <tr>
            <th>Nom de l'acteur</th>
        </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.name }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('actor_show', {'slug': actor.slug}) }}">Accéder</a>
                    <a class="btn btn-success" href="{{ path('actor_edit', {'slug': actor.slug}) }}">Modifier</a>
                    <a class="btn btn-light" href="{{ path('actor_delete', {'slug': actor.slug}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun acteur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="create btn btn-success m-3" href="{{ path('actor_new') }}">Créer un nouveau</a>
{% endblock %}
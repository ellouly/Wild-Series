{% extends 'base.html.twig' %}

{% block title %}Séries{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>
    <div>
        {% for season in seasons %}
            <div>
                <h4><a href="{{ path('wild_season',{'id':season.id}) }}">Saison {{season.id}} de {{program.title }}</a></h4>
                <p>{{ season.description }}</p>
            </div>
        {% endfor %}
    </div>
    <div class="actor">
        <strong>Acteurs :</strong>
        <ul>
            {% for actor in program.actors %}
                <li><a href="{{ path('wild_actor',{'id':actor.id}) }}" >{{ actor.name }}</a></li>
            {% else %}
                <li>Aucun acteur pour cette série</li>
            {% endfor %}
        </ul>
    </div>
    <a href="{{ path('wild_index') }}">Retour à l'accueil</a>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Liste des séries{% endblock %}

{% block body %}
    <h1>Liste des séries</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Sommaire</th>
                <th>Affiche</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.title }}</td>
                <td>{{ program.summary }}</td>
                <td><img src="{{program.poster}}" alt="{{ program.title }} poster"></td>
                <td>
                    <a href="{{ path('program_show', {'id': program.id}) }}">Accéder</a>
                    <a href="{{ path('program_edit', {'id': program.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'article trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('program_new') }}">Créer une nouvelle série</a>
{% endblock %}

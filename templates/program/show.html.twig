{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <h1>{{ program.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ program.category.name }}</td>
            </tr>
            <tr>
                <th>Sommaire</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Affiche</th>
                <img src="{{program.poster}}" alt="{{ program.title }} poster">
            </tr>
        </tbody>
    </table>
    <div class="actor">
        <strong>Acteurs :</strong>
        <ul>
            {% for actor in program.actors %}
                <li><a href="{{ path('wild_actor',{'id':actor.id}) }}" >{{ actor.name }}</a></li>
            {% else %}
                <li>Aucun acteur pour cette série</li>
            {% endfor %}
        </ul>
    </div>
    <div>
        {% for season in season %}
            <div>
                <h4><a href="{{ path('wild_season',{'id':season.id}) }}">Saison {{season.id}} de {{program.title }}</a></h4>
                <p>{{ season.description }}</p>
            </div>
        {% endfor %}
    </div>


    <a href="{{ path('program_index') }}">Retour à la liste</a><br>

    <a href="{{ path('program_edit', {'id': program.id}) }}">Ajouter</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
